{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=StockTradePro_StockData;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "StockDataSettings": {
    "PriceUpdateIntervalSeconds": 30,
    "MarketOpenHour": 9,
    "MarketOpenMinute": 30,
    "MarketCloseHour": 16,
    "MarketCloseMinute": 0,
    "TimeZone": "Eastern Standard Time",
    "MaxPriceChangePercent": 10.0,
    "EnableRealTimeUpdates": true
  }
}