{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=StockTradePro_Portfolio;Username=postgres;Password=postgres",
    "RabbitMQ": "amqp://stocktrader:stocktrader123@localhost:5672/"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForStockTradePro2024!",
    "Issuer": "StockTradePro",
    "Audience": "StockTradeProUsers",
    "ExpirationMinutes": "60"
  },
  "ExternalServices": {
    "ApiGateway": {
      "BaseUrl": "http://localhost:5262",
      "StockDataEndpoint": "/api/stocks",
      "Timeout": "00:00:30"
    }
  },
  "PortfolioSettings": {
    "EnableRealTimeUpdates": true,
    "PerformanceCalculationIntervalMinutes": 15,
    "MaxPortfoliosPerUser": 10,
    "DefaultCurrency": "USD"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:5400"
}