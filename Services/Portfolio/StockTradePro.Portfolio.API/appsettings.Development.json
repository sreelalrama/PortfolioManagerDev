{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=StockTradePro_Portfolio_Dev;Username=postgres;Password=postgres",
    "RabbitMQ": "amqp://stocktrader:stocktrader123@localhost:5672/"
  },
  "Jwt": {
    "SecretKey": "DevelopmentSecretKeyThatIsAtLeast32CharactersLongForStockTradePro2024!",
    "Issuer": "StockTradePro-Dev",
    "Audience": "StockTradeProUsers-Dev",
    "ExpirationMinutes": "120"
  },
  "ExternalServices": {
    "ApiGateway": {
      "BaseUrl": "http://localhost:5262",
      "StockDataEndpoint": "/api/stocks",
      "Timeout": "00:00:30"
    }
  },
  "PortfolioSettings": {
    "EnableRealTimeUpdates": true,
    "PerformanceCalculationIntervalMinutes": 5,
    "MaxPortfoliosPerUser": 20,
    "DefaultCurrency": "USD"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "StockTradePro.Portfolio.API": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Urls": "http://localhost:5400"
}