// Pages/Index.razor - Simplified with no API calls
@page "/"
@using StockTradePro.BlazorUI.Components.Dashboard

<PageTitle>Dashboard - StockTradePro</PageTitle>

<div class="dashboard">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">Dashboard</h1>
                    <p class="text-muted mb-0">Welcome back! Here's your portfolio overview.</p>
                </div>
                <div>
                    <span class="text-muted small">Last updated: @DateTime.Now.ToString("MMM dd, yyyy HH:mm")</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-12 mb-4">
                    <MarketOverviewComponent />
                </div>
            </div>
            
            <div class="row">
                <div class="col-12">
                    <RecentActivityComponent />
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="mb-4">
                <PortfolioSummaryComponent />
            </div>
            
            <div class="mb-4">
                <WatchlistSummaryComponent />
            </div>
            
            <div class="mb-4">
                <QuickActionsComponent />
            </div>
        </div>
    </div>
</div>
