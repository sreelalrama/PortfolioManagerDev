@code {
    [Parameter] public string Symbol { get; set; } = "";

    private bool isLoading = true;
    private StockDto? stock;
    private StockPriceDto? currentPrice;
    private List<StockPriceDto>? priceHistory;
    private string selectedPeriod = "1D";

    protected override async Task OnInitializedAsync()
    {
        await LoadStockData();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(Symbol))
        {
            await LoadStockData();
        }
    }

    private async Task LoadStockData()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            // Load stock basic information
            stock = await StockDataService.GetStockAsync(Symbol);

            if (stock != null)
            {
                // Load current price data
                currentPrice = await StockDataService.GetCurrentPriceAsync(Symbol);

                // Load price history for chart
                await LoadPriceHistory();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stock data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadPriceHistory()
    {
        try
        {
            DateTime fromDate = selectedPeriod switch
            {
                "1D" => DateTime.Now.AddDays(-1),
                "5D" => DateTime.Now.AddDays(-5),
                "1M" => DateTime.Now.AddMonths(-1),
                "3M" => DateTime.Now.AddMonths(-3),
                "1Y" => DateTime.Now.AddYears(-1),
                _ => DateTime.Now.AddDays(-1)
            };

            priceHistory = await StockDataService.GetPricesAsync(Symbol, fromDate, DateTime.Now);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading price history: {ex.Message}");
        }
    }

    private async Task SetPeriod(string period)
    {
        selectedPeriod = period;
        await LoadPriceHistory();
        StateHasChanged();
    }

    private async Task SetPeriod1D() => await SetPeriod("1D");
    private async Task SetPeriod5D() => await SetPeriod("5D");
    private async Task SetPeriod1M() => await SetPeriod("1M");
    private async Task SetPeriod3M() => await SetPeriod("3M");
    private async Task SetPeriod1Y() => await SetPeriod("1Y");

    private async Task RefreshData()
    {
        await LoadStockData();
    }

    private void BuyStock(string symbol)
    {
        Navigation.NavigateTo($"/transactions/buy?symbol={symbol}");
    }

    private void AddToWatchlist(string symbol)
    {
        Navigation.NavigateTo($"/watchlists/add?symbol={symbol}");
    }

    private void CreatePriceAlert(string symbol)
    {
        Navigation.NavigateTo($"/watchlists/alerts/create?symbol={symbol}");
    }

    private void ViewSimilarStocks(string sector)
    {
        Navigation.NavigateTo($"/stocks?sector={Uri.EscapeDataString(sector)}");
    }

    private string FormatMarketCap(double marketCap)
    {
        if (marketCap >= 1_000_000_000_000)
            return $"${marketCap / 1_000_000_000_000:F1}T";
        else if (marketCap >= 1_000_000_000)
            return $"${marketCap / 1_000_000_000:F1}B";
        else if (marketCap >= 1_000_000)
            return $"${marketCap / 1_000_000:F1}M";
        else
            return $"${marketCap:F0}";
    }
}